<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".fragments.inicio.HomeFragment">

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnUbicacion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sensor de Ubicacion"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="5dp"
        />

    <Button
        android:id="@+id/btnOrientacion"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Orientacion del Dispositivo"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="5dp"

        />

    <Button
        android:id="@+id/btnDeteccionM"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Deteccion de Movimiento"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="5dp"
        />

    <Button
        android:id="@+id/btnLuz"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Sensor de Luz"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="5dp"
        />

</LinearLayout>